
@{
    ViewBag.Title = "SearchPro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TexnoGallery.ViewModel.Default
@model DefaultViewModel

@section mainCss{
    <link rel="stylesheet" href="~/css/shop.css">

}
   
    <div class="container">
        <div class="row mt-4 mb-4">
            @foreach (var item in Model.ProImage)
            {
                <div class="col-md-3">
                    <a class="aPro" href="#">
                        <div class="shopImg" style="height:400px">
                            <img class="shop-img" style="height:200px" src="~/Uploads/@item.Image" alt="">
                            <div class="img-text">
                                <span style="color:black">@item.Product.Name</span>
                                <p style="color:black">@item.Product.Price AZN</p>
                                <button type="button" class="btn btn-warning">Sebete elave et</button>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
        </div>
    



